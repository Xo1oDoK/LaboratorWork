<Window x:Class="WorkLab.View.AddNewProducts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkLab.View"
        mc:Ignorable="d"
        Title="AddNewProducts" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Width="200" >
            <TextBlock Text="Добавление названия"/>
            <TextBox Text="{Binding ProductName}"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Center" Width="200" >
            <TextBlock Text="Добавление цены"/>
            <TextBox Text="{Binding ProductPrice}"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Vertical" HorizontalAlignment="Center" Width="200" >
            <TextBlock Text="Добавление описания"/>
            <TextBox Text="{Binding ProductDescription}"/>
        </StackPanel>
        <Button Grid.Row="3" Content="Сохранить Новый товар"/>
    </Grid>
    
</Window>
